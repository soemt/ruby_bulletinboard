<div class="max-w-[940px] mx-auto rounded p-6 mt-4 border-solid border border-gray-300">
  <h1 class="text-xl sm:text-3xl font-semibold text-gray-900 tracking-tight mb-[25px]"> 
    Detail of <%= @user.name %> 
  </h1>
  <div class="flex">
    <div class="">
      <img src="<%= @user.profile %>" class="shadow-xl rounded-full align-middle border-none min-w-[150px] max-w-[150px] h-[150px]">
    </div>
    <div class="border-solid mx-4 border-r border-gray-300 pr-4">
    </div>
    <div class="text-gray-700">
      <div class="grid md:grid-cols-2 text-sm pb-6">
        <div class="grid grid-cols-2">
          <div class="px-4 py-2 font-semibold">Name</div>
          <div class="px-4 py-2"> <%= @user.name %> </div>
        </div>
        <div class="grid grid-cols-2">
          <div class="px-4 py-2 font-semibold">Email</div>
          <div class="px-4 py-2"> <%=mail_to @user.email , class: "text-blue-600 hover:underline" %> </div>
        </div>
        <div class="grid grid-cols-2">
          <div class="px-4 py-2 font-semibold">Type</div>
          <div class="px-4 py-2"> <%= @user.role == "0" ? 'Admin' : 'User' %> </div>
        </div>
        <div class="grid grid-cols-2">
          <div class="px-4 py-2 font-semibold">Phone No.</div>
          <div class="px-4 py-2"> <%= @user.phone %> </div>
        </div>
        <div class="grid grid-cols-2">
          <div class="px-4 py-2 font-semibold">Birthday</div>
          <div class="px-4 py-2"> <%= @user.dob %> </div>
        </div>
        <div class="grid grid-cols-2">
          <div class="px-4 py-2 font-semibold">Address</div>
          <div class="px-4 py-2"> <%= @user.address %> </div>
        </div>
        <div class="grid grid-cols-2">
          <div class="px-4 py-2 font-semibold">Created by</div>
          <div class="px-4 py-2">
            <%= @user.created_user.name %>
          </div>
        </div>
        <div class="grid grid-cols-2">
          <div class="px-4 py-2 font-semibold">Created at</div>
          <div class="px-4 py-2">
            <%= @user.created_at.strftime('%Y/%m/%d') %>
          </div>
        </div>
        <div class="grid grid-cols-2">
          <div class="px-4 py-2 font-semibold">Updated by</div>
          <div class="px-4 py-2">
            <%= @user.updated_user.name %>
          </div>
        </div>
        <div class="grid grid-cols-2">
          <div class="px-4 py-2 font-semibold">Updated at</div>
          <div class="px-4 py-2">
            <%= @user.updated_at.strftime('%Y/%m/%d') %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="mt-4">
  <%= link_to "Back to users", users_path, class: "mx-[5px] px-4 py-2 rounded-md text-sm font-medium border shadow focus:outline-none focus:ring transition text-gray-600 bg-gray-50 border-gray-200 hover:bg-gray-100 active:bg-gray-200 focus:ring-gray-300" %>
</div>