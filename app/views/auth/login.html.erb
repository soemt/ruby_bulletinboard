<div class="w-[340px] mx-auto mt-[20px]">
  <h1 class="text-2xl sm:text-3xl font-medium text-gray-700 tracking-tight mb-4">
    Log in
  </h1>
  <% if flash[:error] %>
    <div class="error-box bg-red-100 border border-red-400 text-red-700 px-4 py-3 mb-4 rounded relative">
      <span class="block">
        <%= flash[:error] %>
      </span>
      <span class="close-btn absolute top-0 bottom-0 right-0 px-4 py-3">
        <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
      </span>
    </div>
  <% end %>
  <div class="w-full rounded-md bg-gray-100">
    <div class="p-[20px] py-[30px]">
      <%= form_for :login do |f| %>
        <div class="mb-4">
          <%= f.label :email, required: true, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1" %>
          <%= f.text_field :email, autofocus: true, class: "appearance-none block w-full bg-white text-gray-700 text-sm border border-gray-200 rounded py-2 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
        </div>

        <div>
          <%= f.label :password, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1" %>
          <%= f.password_field :password_digest, class: "appearance-none block w-full bg-white text-gray-700 text-sm border border-gray-200 rounded py-2 px-4 leading-tight focus:outline-none focus:bg-white" %>
        </div>

        <div class="flex items-center justify-between mb-4">
          <div>
            <%= check_box_tag :remember_me, 1, params[:remember_me], class: "leading-tight", id: "remember", name: "remember" %>
            <label class="text-sm" for="remember">Remember me</label>
          </div>
          <div>
            <%= link_to "Forgot password?", forgot_url, class: "text-blue-600 text-xs mb-3 hover:underline" %>
          </div>
        </div>

        <div>
          <%= f.submit "Log In", class: "block w-full px-4 py-2 rounded-md text-sm font-medium border-0 focus:outline-none focus:ring transition text-white bg-blue-500 hover:bg-blue-600 active:bg-blue-700 focus:ring-blue-300 cursor-pointer" %>
        </div>

        <div class="divider block w-full text-center text-xs my-3">
          <span class="bg-gray-100 z-10 px-4 text-xs"> OR </span>
        </div>

        <div>
          <%= link_to 'Sign Up Here', signup_path , class: "block w-full px-4 py-2 rounded-md text-sm text-center font-normal border shadow focus:outline-none focus:ring transition text-blue-500 bg-white border-blue-200 hover:bg-blue-100 active:bg-blue-200 focus:ring-blue-300 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>