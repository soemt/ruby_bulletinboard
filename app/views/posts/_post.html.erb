<tr id="<%= dom_id post %>" >
  <td class="border-b border-gray-100 dark:border-gray-700 py-4 px-5 text-gray-500 text-center"> 
    <%= link_to post.title, post_path(post), class: "hover:underline hover:text-gray-700" %> 
  </td>
  <td class="border-b border-gray-100 dark:border-gray-700 py-4 px-5 text-gray-500 text-center"> <%= post.description %> </td>
  <td class="border-b border-gray-100 dark:border-gray-700 py-4 px-5 text-gray-500 text-center"> <%= post.created_user.name %> </td>
  <td class="border-b border-gray-100 dark:border-gray-700 py-4 px-5 text-gray-500 text-center"> <%= post.created_at.strftime('%Y/%m/%d') %> </td>
  <td class="border-b border-gray-100 dark:border-gray-700 py-4 px-5 text-gray-500 text-center w-[240px]">
    <%= link_to "Edit",edit_post_path(post), class: "px-4 py-2 rounded-md text-sm font-medium border shadow focus:outline-none focus:ring transition text-blue-600 bg-blue-50 border-blue-200 hover:bg-blue-100 active:bg-blue-200 focus:ring-blue-300" %>
    <%= link_to 'Delete', '#', "data-toggle"=>"modal", "data-target" => "#postId_#{post.id}", class: "px-4 py-2 rounded-md text-sm font-medium border shadow focus:outline-none focus:ring transition text-red-600 bg-red-50 border-red-200 hover:bg-red-100 active:bg-red-200 focus:ring-red-300 cursor-pointer" %></td>
  </td>
</tr>
<div
  id="postId_<%= post.id %>"
  class="w-full modal fixed z-10 inset-0 overflow-y-auto"
  >
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true" data-dismiss="modal"></div>
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <div class="sm:flex sm:items-start">
          <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
            <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
              Are you sure you want to delete?
            </h3>
            <div class="mt-2">
              <div class="grid grid-cols-2">
                <div class="px-4 py-2 font-semibold">ID</div>
                <div class="px-4 py-2"> <%= post.id %> </div>
              </div>
              <div class="grid grid-cols-2">
                <div class="px-4 py-2 font-semibold">Title</div>
                <div class="px-4 py-2"> <%= post.title %> </div>
              </div>
              <div class="grid grid-cols-2">
                <div class="px-4 py-2 font-semibold">Description</div>
                <div class="px-4 py-2"> <%= post.description %> </div>
              </div>
              <div class="grid grid-cols-2">
                <div class="px-4 py-2 font-semibold">Status</div>
                <div class="px-4 py-2"> <%= post.status == "0" ? 'Active' : 'Inactive' %> </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
        <%= button_to "Delete", post, method: :delete, :class => 'w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm' %>
        <button type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" data-dismiss="modal">
          Cancel
        </button>
      </div>
    </div>
  </div>
</div>




