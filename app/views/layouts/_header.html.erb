<nav class="bg-gray-800">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">
      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start font-semibold">
        <div class="flex-shrink-0 flex items-center">
          <%= link_to "BulletinBoard", root_path, class:"text-white" %>
        </div>
        <% if current_user %>
          <div class="hidden sm:block sm:ml-6">
            <div class="flex space-x-4">
              <%=link_to "Posts", root_path, class:"#{current? "bg-gray-900 text-white hover:bg-gray-900", root_path(params["/:action"])} text-gray-300 hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium" %>
              <%=link_to "Users", users_path, class:"#{current? "bg-gray-900 text-white hover:bg-gray-900", users_path} text-gray-300 hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium" %>
            </div>
          </div>
        <% end %>
      </div>
      <% if current_user %>
        <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
          <button type="button" class="bg-gray-800">
            <%= link_to "Create User", new_user_path,  class: "text-white font-medium" %>
          </button>

          <!-- Profile dropdown -->
          <div class="ml-3 relative">
            <div>
              <button type="button" class="profile-btn bg-gray-800 flex">
                <div class="text-white font-medium flex">
                  <%= current_user.name %>
                  <img src="<%= current_user.profile %>" class="ml-2 rounded-full align-middle border-none min-w-[24px] max-w-[24px] h-[24px]">
                </div>
              </button>
            </div>
            <div class="profile-extra hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
              <%= link_to "Profile", profile_path(current_user.name) , class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100"%>
              <%= button_to 'Log out', logout_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</nav>